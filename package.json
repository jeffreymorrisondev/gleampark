{
  "name": "gleampark",
  "displayName": "GleamPark",
  "description": "Launch Gleam Playground with Highlighted Code",
  "version": "0.1.0",
  "publisher": "jeffreymorrisondev",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffreymorrisondev/gleampark.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "keywords": [
    "gleam",
    "playground",
    "share"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:gleam"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gleampark.shareToPlayground",
        "title": "Share to Playground",
        "category": "GleamPark"
      },
      {
        "command": "gleampark.decodeFromPlayground",
        "title": "Decode from Playground",
        "category": "GleamPark"
      }
    ],
    "configuration": {
      "title": "GleamPark",
      "properties": {
        "gleampark.shareMethod": {
          "type": "string",
          "default": "browser",
          "enum": [
            "browser",
            "clipboard",
            "both"
          ],
          "enumDescriptions": [
            "Open playground in browser",
            "Copy link to clipboard",
            "Open in browser and copy link"
          ],
          "description": "How to share code to the playground"
        },
        "gleampark.pasteMethod": {
          "type": "string",
          "default": "newFile",
          "enum": [
            "newFile",
            "append",
            "ask"
          ],
          "enumDescriptions": [
            "Always open in a new untitled file",
            "Append to end of active editor",
            "Ask user each time"
          ],
          "description": "How to handle decoded playground code"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.75.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "lz-string": "^1.5.0"
  }
}
